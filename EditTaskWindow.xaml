<Window x:Class="TodoApp.EditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditTaskWindow" Height="250" Width="400">
    <Grid>
        <Label Content="Název úkolu" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="TaskName" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" Width="250"/>

        <Label Content="Popis úkolu" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox x:Name="TaskDescription" HorizontalAlignment="Left" Margin="120,50,0,0" VerticalAlignment="Top" Width="250" Height="50" TextWrapping="Wrap"/>

        <Label Content="Datum splnění" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0"/>
        <DatePicker x:Name="DueDate" HorizontalAlignment="Left" Margin="120,120,0,0" VerticalAlignment="Top" Width="250"/>

        <Button Content="Uložit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="140,180,0,0" Click="SaveButton_Click"/>
    </Grid>
</Window>